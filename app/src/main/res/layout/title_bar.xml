<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/driver_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:text="driver full name"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/cab_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="cab number"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/driver_full_name"
        android:layout_toRightOf="@+id/driver_full_name"
        android:paddingBottom="1.8dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>